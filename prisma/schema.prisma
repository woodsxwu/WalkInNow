generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Main clinic information
model Clinic {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String?  @db.Text
  
  // Location
  address     String
  city        String
  province    String
  postalCode  String?  @map("postal_code")
  latitude    Float?
  longitude   Float?
  
  // Contact information
  phone       String?
  email       String?
  website     String?
  
  // Booking & availability info
  isRealWalkIn        Boolean  @default(false) @map("is_real_walk_in")
  acceptsNewPatients  Boolean  @default(true) @map("accepts_new_patients")
  appointmentTypes    String[] @map("appointment_types") // ['in-person', 'phone', 'video']
  
  // API Integration - Flexible URL template system
  apiUrlTemplate   String?  @db.Text @map("api_url_template") // Full URL with placeholders like {date}, {from}, {to}
  apiDateFormat    String?  @map("api_date_format") // e.g., 'YYYY-MM-DD' or 'ISO8601'
  
  // Metadata
  isActive        Boolean   @default(true) @map("is_active")
  lastVerifiedAt  DateTime? @map("last_verified_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  
  @@map("clinics")
}
